<h1>Eat Da Burger!</h1>

<h2>Burgers to eat!</h2>


  {{#each burgers}}
  {{#unless this.devoured}}
     
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>

        
      
    {{/unless}}
  {{/each}}


<h2>Devoured Burgers!</h2>


  {{#each burgers}}
    {{#if this.devoured}}
      
        {{this.burger_name}}

        
      
    {{/if}}
  {{/each}}


<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

